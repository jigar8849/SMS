<style>
  /* Sidebar wrapper: matches your layout */
  .sidebar-wrapper {
    position: fixed;
    top: 0;
    left: -303px;
    width: 303px;
    height: 100vh;
    background-color: white;
    border-right: 1px solid #e0e0e0;
    z-index: 1050;
    transition: left 0.3s ease;
    overflow: hidden;
    padding: 0;              /* REMOVE .p-3 default padding here */
    box-sizing: border-box;
  }
  .sidebar-wrapper.active {
    left: 0;
  }

  /* Remove all spacing above the blue panel.
     Blue panel is full width of sidebar and touches the top. */
  .sidebar-role-panel {
    height: 4rem;
    width: 100%; /* Always full width (matches sidebar width) */
    background-color: #0d6efd;
    color: #fff;
    font-weight: 600;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    user-select: none;
    margin: 0;       /* NO margin above or below */
    padding: 0;
    box-shadow: 0 2px 8px 0 rgba(13,110,253,0.05);
    letter-spacing: 0.01em;
  }

  /* The sidebar content wrapper, for layout and spacing below the role bar */
  .sidebar-inner {
    display: flex;
    flex-direction: column;
    height: calc(100vh - 4rem);
    padding: 1.5rem 1rem 1rem 1rem;  /* restores spacing, but not above */
    overflow: hidden;
  }

  .sidebar-close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    font-size: 1.5rem;
    color: #6c757d;
    cursor: pointer;
    padding: 0.25rem;
    line-height: 1;
    z-index: 10;
    display: none;
    transition: opacity 0.3s ease;
  }
  .sidebar-close:hover {
    color: black;
    background-color: #f8f9fa;
    border-radius: 50%;
  }

  .sidebar-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.2);
    z-index: 1040;
  }
  .sidebar-overlay.show {
    display: block !important;
  }

  @media (min-width: 992px) {
    .sidebar-wrapper {
      left: 0 !important;
      width: 303px;
      height: 100vh;
      transition: none;
    }
    .sidebar-close {
      display: none !important;
    }
    body {
      margin-left: 303px;
    }
    .sidebar-inner > ul.nav {
      overflow-y: auto;
      max-height: calc(100vh - 4rem - 100px);
      padding-right: 8px;
    }
    .sidebar-inner > .pt-1.logout {
      position: sticky;
      bottom: 0;
      background: white;
      padding: 1rem 1.5rem;
      border-top: 1px solid #e0e0e0;
      z-index: 10;
    }
  }

  @media (max-width: 991px) {
    .sidebar-wrapper {
      left: -280px;
      width: 280px;
      height: 100vh;
      border-right: 1px solid #e0e0e0;
      box-shadow: 2px 0 10px rgba(0,0,0,0.1);
      transition: left 0.3s ease;
    }
    .sidebar-wrapper.active { left: 0; }
    .sidebar-inner {
      height: calc(100vh - 3rem);
      padding: 1rem 0.7rem 0.7rem 0.7rem;
    }
    .sidebar-role-panel {
      height: 3rem;
      font-size: 1rem;
    }
    .sidebar-wrapper.active .sidebar-close {
      display: block !important;
      opacity: 1;
    }
    body { margin-left: 0; }
  }

  li a i, .logout { font-size: 1.5em; }
  li { border-radius: 0.5rem; }
  li:hover { background-color: rgb(240, 239, 239); }
</style>

<div class="sidebar-overlay" id="sidebarOverlay"></div>

<div id="sidebar" class="sidebar-wrapper bg-white">
  <!-- Blue role panel at top, exactly navbar size, zero space above -->
  <% if (user) { %>
    <div class="sidebar-role-panel">
      <%= user.role === 'admin' ? 'Admin Panel' : 'Resident Panel' %>
    </div>
  <% } %>

  <div class="sidebar-inner">
    <!-- Mobile close button -->
    <button class="sidebar-close" id="sidebarClose" title="Close sidebar">
      <i class="bi bi-x-lg text-dark"></i>
    </button>
    <ul class="nav nav-pills flex-column mb-auto">
      <% if (user && user.role === 'admin') { %>
        <li class="nav-item"><a href="/admin/dashboard" class="nav-link text-dark"><i class="bi bi-house-door me-2"></i> Dashboard</a></li>
        <li><a href="/admin/residents" class="nav-link text-dark"><i class="bi bi-people me-2"></i> Residents</a></li>
        <li><a href="/admin/payments" class="nav-link text-dark"><i class="bi bi-credit-card me-2"></i> Payments</a></li>
        <li><a href="/admin/parking" class="nav-link text-dark"><i class="bi bi-car-front me-2"></i> Parking</a></li>
        <li><a href="/admin/employees" class="nav-link text-dark"><i class="bi bi-person-badge me-2"></i> Employees</a></li>
        <li><a href="/admin/flatList" class="nav-link text-dark"><i class="bi bi-building me-2"></i> Flat List</a></li>
        <li><a href="/admin/complaints" class="nav-link text-dark"><i class="bi bi-chat-dots me-2"></i> Complaints</a></li>
      <% } else if (user && user.role === 'resident') { %>
        <li class="nav-item"><a href="/resident/dashboard" class="nav-link text-dark"><i class="bi bi-house-door me-2"></i> Dashboard</a></li>
        <li><a href="/resident/billsPayment" class="nav-link text-dark"><i class="bi bi-credit-card me-2"></i> Bills & Payments</a></li>
        <li><a href="/resident/complaints" class="nav-link text-dark"><i class="bi bi-chat-dots me-2"></i> Complaints</a></li>
        <li><a href="/resident/bookEvent" class="nav-link text-dark"><i class="bi bi-calendar me-2"></i> Book Events</a></li>
        <li><a href="/resident/ownerList" class="nav-link text-dark"><i class="bi bi-file-earmark-text me-2"></i> Owner List</a></li>
        <li><a href="/resident/vehicleSearch" class="nav-link text-dark"><i class="bi bi-car-front me-2"></i> Vehicle Search</a></li>
        <li><a href="/resident/societyStaff" class="nav-link text-dark"><i class="bi bi-clipboard-data me-2"></i> Society Staff</a></li>
        <li><a href="/resident/profile" class="nav-link text-dark"><i class="bi bi-shield me-2"></i> Profile</a></li>
      <% } %>
    </ul>
    <div class="pt-1 logout">
      <a href="/logout" class="nav-link text-danger fw-bold">
        <i class="bi bi-box-arrow-right me-2"></i> Logout
      </a>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleBtn = document.getElementById("sidebarToggle");
    const sidebar = document.getElementById("sidebar");
    const sidebarOverlay = document.getElementById("sidebarOverlay");
    const sidebarClose = document.getElementById("sidebarClose");

    function openSidebar() {
      sidebar.classList.add("active");
      sidebarOverlay.classList.add("show");
    }
    function closeSidebar() {
      sidebar.classList.remove("active");
      sidebarOverlay.classList.remove("show");
    }
    if (toggleBtn) {
      toggleBtn.addEventListener("click", openSidebar);
    }
    if (sidebarClose) {
      sidebarClose.addEventListener("click", closeSidebar);
    }
    if (sidebarOverlay) {
      sidebarOverlay.addEventListener("click", closeSidebar);
    }
    window.addEventListener('resize', function () {
      if (window.innerWidth >= 992) {
        sidebar.classList.remove("active");
        sidebarOverlay.classList.remove("show");
      }
    });
  });
</script>
