<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" id="flash-success">
    <%= success %> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" id="flash-error">
    <%= error %> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<!-- JavaScript to auto-dismiss alerts after 3 seconds -->
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    setTimeout(() => {
      const successAlert = document.getElementById('flash-success');
      const errorAlert = document.getElementById('flash-error');

      if (successAlert) {
        const alertInstance = bootstrap.Alert.getOrCreateInstance(successAlert);
        alertInstance.close(); // closes the alert
      }

      if (errorAlert) {
        const alertInstance = bootstrap.Alert.getOrCreateInstance(errorAlert);
        alertInstance.close();
      }
    }, 3000);
  });
</script>
