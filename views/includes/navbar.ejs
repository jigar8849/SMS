<!-- includes/navbar.ejs or similar file -->
<style>
  nav.navbar {
    height: 4rem;
    padding: 0;
  }
  .nav-role-text {
    height: 4rem;
    width: 16rem;
    background-color: #0d6efd;
    color: white;
    font-weight: 600;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  /* Hamburger Button - initially hidden */
  .navbar-hamburger {
    display: none;
    background: none;
    border: none;
    font-size: 2rem;
    color: #0d6efd;
    margin-left: 0.7rem;
    margin-right: 0.5rem;
    align-items: center;
  }
  .navbar-container {
    height: 100%;
    display: flex;
    align-items: stretch;
    width: 100%;
  }
  @media (max-width: 576px) {
    /* Hide role panel, show hamburger */
    .nav-role-text {
      display: none !important;
    }
    .navbar-hamburger {
      display: flex !important;
    }
    nav{
      width: 100vw;
    }
    .navbar-title {
      font-size: 1rem !important;
    }
    .user-info-text {
      display: none;
    }
    .bi-person-circle {
      font-size: 1.5rem !important;
    }
  }
  @media (max-width: 768px) {
    .nav-role-text {
      width: auto;
      padding: 0 1rem;
      font-size: 1rem;
    }
    .navbar-title {
      font-size: 1rem !important;
    }
    .user-info-text {
      display: none;
    }
    .bi-person-circle {
      font-size: 1.5rem !important;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
  <div class="container-fluid px-0 navbar-container">
    <!-- Hamburger for sidebar toggle (only on mobile) -->
    <button class="navbar-hamburger" id="sidebarToggle" aria-label="Toggle sidebar" type="button">
      <i class="bi bi-list"></i>
    </button>
    <!-- Left: Role Panel (hidden on xs) -->
    <% if (user && user.role === "admin") { %>
      <div class="nav-role-text">Admin Panel</div>
    <% } else if (user && user.role === "resident") { %>
      <div class="nav-role-text">Resident Panel</div>
    <% } %>
    <!-- Center Title -->
    <div class="flex-grow-1 d-flex align-items-center ms-3 fw-semibold fs-4 navbar-title">
      Society Management
    </div>
    <!-- Right: Notification and User Info -->
    <div class="d-flex align-items-center me-3">
      <button class="btn btn-link text-dark p-0 me-2">
        <i class="bi bi-bell fs-4"></i>
      </button>
      <div class="d-flex align-items-center bg-light rounded-pill px-2 py-1">
        <i class="bi bi-person-circle text-primary me-2" style="font-size: 2rem;"></i>
        <div class="text-end user-info-text">
          <div class="fw-bold small">Admin User</div>
          <div class="text-muted small">Administrator</div>
        </div>
      </div>
    </div>
  </div>
</nav>




