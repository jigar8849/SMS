<%- layout("layouts/boilerplate") %>

    <style>
        p {
            margin-bottom: 0rem !important;
        }

        .dash-card {
            width: 15rem;
            height: 8rem;
        }

        .payble-item {
            background-color: rgb(243, 241, 241);
        }

        .box-size {
            width: 23rem;
            height: auto;
            background-color: white;
        }

        .shortcut-box {
            width: 15rem;
        }

        .quick-action {
            background: white;
        }



@media (max-width: 576px) {
  /* Container padding and margins adjustment for mobile */
  .resident-dashboard-container {
    padding: 0 1rem !important;
  }

  /* Dash info cards - 2 per row on mobile, flexible width */
  .dash-info {
    flex-wrap: wrap !important;
    gap: 1rem !important;
    justify-content: space-between !important;
    margin-left: 0 !important;
  }

  .dash-card {
    width: 48% !important;
    min-width: 140px;
    height: auto !important;
    margin-bottom: 1rem;
    font-size: 0.95rem !important;
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
    gap: 0.5rem !important;
    padding: 1rem 0.5rem !important;
  }

  .dash-card .left {
    margin-bottom: 0 !important;
  }

  .dash-card .right {
    margin-top: 0 !important;
  }

  /* Dash title text adjustments */
  .dash-title h1 {
    font-size: 1.25rem !important;
    /* padding: 1rem 0 0.5rem 1rem !important; */
  }
  .dash-title p {
    font-size: 0.9rem !important;
    /* padding-left: 1rem !important; */
    padding-bottom: 1rem !important;
  }

  /* Info boxes container stacking on mobile */
  .info-boxes {
    flex-wrap: wrap !important;
    gap: 1rem !important;
    justify-content: center !important;
    margin-left: 0 !important;
  }

  /* Box sizes responsive to width 100% on mobile, smaller height */
  .box-size {
    width: 100% !important;
    min-width: auto !important;
    margin-bottom: 1rem !important;
    height: auto !important;
  }

  /* Payble items adjustment for better spacing and wrapping */
  .payble-item {
    flex-wrap: wrap !important;
    gap: 0.5rem !important;
  }

  /* Notification list spacing fix */
  .notific {
    padding: 0 0.5rem !important;
  }

  /* Quick Action buttons stack vertically and full width on mobile */
  .quick-action .shortcuts {
    flex-direction: column !important;
    gap: 1rem !important;
    justify-content: center !important;
  }

  .shortcut-box {
    width: 100% !important;
    min-width: auto !important;
    justify-content: center !important;
  }

  /* Icons and text alignment fixes */
  .shortcut-box a {
    width: 100% !important;
    text-align: center !important;
  }

  /* Reduce font sizes slightly for better mobile fit */
  p, h3, h5 {
    font-size: 0.9rem !important;
  }

  /* Margin reset for sections */
  .dash-info, .info-boxes, .quick-action {
    margin-left: 0 !important;
  }
}


@media (max-width: 768px) {
  /* Body padding */
  .resident-dashboard-container {
    padding: 0 1rem !important;
  }

  /* Title (Welcome) section */
  .dash-title {
    width: 100% !important;
    /* padding: 1rem 0 !important; */
    /* margin-left: 0 !important; */
    border-radius: 0.7rem !important;
    background: #1976f2;
    color: #fff;
    text-align: left;
    margin-bottom: 1.5rem !important;
  }
  .dash-title h1 {
    font-size: 1.4rem !important;
    margin-left: 1rem !important;
    margin-bottom: 0.7rem;
    color: #fff !important;
  }
  .dash-title p {
    font-size: 1.05rem !important;
    margin-left: 1rem !important;
    margin-bottom: 0;
    color: #e8eefc !important;
  }

  /* Dashboard cards container */
  .dash-info {
    display: flex !important;
    flex-wrap: wrap !important;
    gap: 1.4rem !important;
    justify-content: space-between !important;
    padding: 0 1rem !important;
    margin: 0 !important;
  }
  .dash-card {
    width: 48% !important;
    min-width: 145px !important;
    height: auto !important;
    margin-bottom: 1.2rem !important;
    font-size: 1rem !important;
    padding: 1.25rem !important;
    border-radius: 0.9rem !important;
    background: #fff !important;
    box-shadow: 0 4px 12px rgba(25,118,242,.07);
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
    gap: 0.5rem !important;
  }
  .dash-card .left {
    margin-bottom: 0 !important;
  }
  .dash-card .right {
    margin-top: 0 !important;
    font-size: 2.2rem !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }
  .dash-card .right i {
    font-size: 2rem !important;
    margin: 0;
  }
  .dash-card p {
    font-size: 0.93rem !important;
    margin-bottom: 0.3rem !important;
    color: #666;
  }
  .dash-card h3 {
    font-size: 1.15rem !important;
    margin-bottom: 0 !important;
    color: #222;
    font-weight: bold;
  }

  /* Info boxes layout: cards stack vertically, full width */
  .info-boxes {
    flex-direction: column !important;
    gap: 1.5rem !important;
    justify-content: flex-start !important;
    margin: 0 !important;
    padding: 0 1rem !important;
  }
  .box-size {
    width: 100% !important;
    min-width: 0 !important;
    margin-bottom: 1.5rem !important;
    height: auto !important;
    background: #fff !important;
    border-radius: 1rem !important;
    box-shadow: 0 4px 12px rgba(25,118,242,0.07);
    padding: 0 !important;
  }
  .bill-head,
  .bill-title,
  .bill-icon {
    display: flex;
    align-items: center;
  }
  .bill-title {
    font-size: 1rem;
    font-weight: bold;
    color: #222;
    margin-left: 0.5rem;
  }
  .bill-icon {
    margin-right: 0.5rem;
    font-size: 1.4rem;
    color: #1976f2;
  }

  /* Payble items spacing */
  .payble-item {
    flex-wrap: wrap !important;
    gap: 0.75rem !important;
    padding: 0 1rem;
    margin: 1rem !important;
    margin: 1rem 0 !important;
    background: #f5f6fa;
    border-radius: 0.6rem;
  }
  .payble-item .left, .payble-item .right {
    padding: 0.7rem 0;
  }
  .payble-item .right {
    text-align: right;
  }
  .payble-item p {
    margin-bottom: 0.25rem !important;
    font-size: 0.95rem !important;
  }
  .payble-item .amount-status {
    font-size: 0.86rem !important;
  }

  /* Notifications & Events section */
  .notific {
    padding: 0 1rem !important;
  }

  /* Quick Action area: items stacked, full width */
  .quick-action .shortcuts {
    flex-direction: column !important;
    gap: 1.1rem !important;
    align-items: stretch !important;
    justify-content: center !important;
    padding: 0 1rem !important;
  }
  .shortcut-box {
    width: 100% !important;
    min-width: 0 !important;
    justify-content: center !important;
    margin-bottom: 0;
    border-radius: 0.7rem !important;
    box-shadow: 0 1px 6px rgba(25,118,242,0.05);
  }
  .shortcut-box a {
    width: 100% !important;
    text-align: center !important;
    padding: 1.1rem 0 !important;
    font-weight: 700 !important;
    font-size: 1rem !important;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.7rem;
  }
  .shortcut-box i {
    font-size: 1.25rem !important;
  }

  /* Section title font size improvement */
  h3, h5, p {
    font-size: 1rem !important;
  }
}





