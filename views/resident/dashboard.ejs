<%- layout("layouts/boilerplate") %>

<style>
    p {
        margin-bottom: 0rem !important;
    }

    .dash-card {
        width: 15rem;
        height: 8rem;
    }

    .payble-item {
        background-color: rgb(243, 241, 241);
    }

    .box-size {
        width: 23rem;
        height: auto;
        background-color: white;
    }

    .shortcut-box {
        width: 15rem;
    }

    .quick-action {
        background: white;
    }

    /* ==== LARGE DESKTOP (1400px and above) ==== */
    @media screen and (min-width: 1400px) {
        .resident-dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 30px;
        }
        
        .dash-card {
            width: 18rem;
            height: 9rem;
        }
        
        .box-size {
            width: 26rem;
        }
    }

    /* ==== STANDARD DESKTOP (1200px to 1399px) ==== */
    @media screen and (min-width: 1200px) and (max-width: 1399px) {
        .resident-dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 25px;
        }
        
        .dash-info {
            flex-wrap: nowrap;
            gap: 20px;
        }
        
        .dash-card {
            width: 15rem;
            height: 8rem;
        }
        
        .info-boxes {
            flex-direction: row;
            gap: 20px;
        }
        
        .box-size {
            width: calc(33.33% - 15px);
            min-width: 22rem;
        }
        
        .shortcuts {
            flex-wrap: nowrap;
            gap: 20px;
        }
        
        .shortcut-box {
            width: calc(25% - 15px);
            min-width: 13rem;
        }
    }

    /* ==== SMALL LAPTOP/LARGE TABLET (1024px to 1199px) ==== */
    @media screen and (min-width: 1024px) and (max-width: 1199px) {
        .resident-dashboard-container {
            padding: 0 20px;
        }
        
        .dash-title {
            margin: 0 10px !important;
        }
        
        .dash-info {
            flex-wrap: wrap;
            gap: 15px;
            margin: 20px 10px !important;
            justify-content: center;
        }
        
        .dash-card {
            width: calc(50% - 10px);
            height: 7.5rem;
            min-width: 200px;
            max-width: 280px;
        }
        
        /* Protect card icons */
        .dash-card .right {
            margin-top: 20px !important;
            padding-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .dash-card .right i {
            font-size: 2rem !important;
            padding: 10px !important;
            min-width: 50px;
            min-height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .info-boxes {
            flex-direction: row;
            flex-wrap: wrap;
            gap: 15px;
            justify-content: space-between;
        }
        
        .box-size {
            width: calc(50% - 10px);
            min-width: 300px;
            margin-bottom: 20px;
        }
        
        .shortcuts {
            flex-wrap: wrap;
            gap: 12px;
            justify-content: space-between;
        }
        
        .shortcut-box {
            width: calc(50% - 8px);
            min-width: 180px;
        }
    }

    /* ==== TABLET (768px to 1023px) ==== */
    @media screen and (min-width: 768px) and (max-width: 1023px) {
        .resident-dashboard-container {
            padding: 0 15px;
        }
        
        .dash-title {
            margin: 0 5px !important;
        }
        
        .dash-title h1 {
            font-size: 1.8rem;
            padding: 15px 0 !important;
        }
        
        .dash-info {
            flex-wrap: wrap;
            gap: 12px;
            margin: 20px 5px !important;
            justify-content: space-between;
        }
        
        .dash-card {
            width: calc(50% - 8px);
            height: 7rem;
            min-width: 170px;
        }
        
        /* Enhanced icon protection for tablets */
        .dash-card .left {
            margin: 12px !important;
            flex: 1;
        }
        
        .dash-card .right {
            margin: 12px 8px !important;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 60px;
        }
        
        .dash-card .right i {
            font-size: 1.8rem !important;
            padding: 8px !important;
            min-width: 45px;
            min-height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px !important;
        }
        
        .info-boxes {
            flex-direction: column;
            gap: 20px;
        }
        
        .box-size {
            width: 100%;
            max-width: none;
        }
        
        .shortcuts {
            flex-wrap: wrap;
            gap: 12px;
            justify-content: space-between;
        }
        
        .shortcut-box {
            width: calc(50% - 8px);
            min-width: 150px;
        }
        
        .shortcut-box a {
            padding: 12px !important;
            font-size: 0.9rem;
        }
    }

    /* ==== MOBILE LARGE (481px to 767px) ==== */
    @media screen and (min-width: 481px) and (max-width: 767px) {
        .resident-dashboard-container {
            padding: 0 10px;
        }
        
        .dash-title {
            margin: 0 !important;
            padding: 15px;
        }
        
        .dash-title h1 {
            font-size: 1.5rem;
            margin: 0;
            padding: 10px 0 !important;
        }
        
        .dash-title p {
            font-size: 0.9rem;
            margin: 0;
            padding-bottom: 10px !important;
        }
        
        .dash-info {
            flex-direction: column;
            gap: 12px;
            margin: 20px 0 !important;
        }
        
        .dash-card {
            width: 100%;
            height: 6rem;
            display: flex;
            align-items: center;
        }
        
        .dash-card .left {
            margin: 15px !important;
            flex: 1;
        }
        
        .dash-card .right {
            margin: 15px !important;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 70px;
        }
        
        .dash-card .right i {
            font-size: 2rem !important;
            padding: 10px !important;
            min-width: 50px;
            min-height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .info-boxes {
            flex-direction: column;
            gap: 20px;
        }
        
        .box-size {
            width: 100%;
        }
        
        .shortcuts {
            flex-direction: column;
            gap: 12px;
        }
        
        .shortcut-box {
            width: 100%;
        }
        
        .shortcut-box a {
            display: block;
            padding: 15px !important;
            text-align: center;
        }
    }

    /* ==== MOBILE SMALL (320px to 480px) ==== */
    @media screen and (min-width: 320px) and (max-width: 480px) {
        .resident-dashboard-container {
            padding: 0 8px;
        }
        
        .dash-title {
            margin: 0 !important;
            padding: 12px;
        }
        
        .dash-title h1 {
            font-size: 1.3rem;
            margin: 0;
            padding: 8px 0 !important;
        }
        
        .dash-title p {
            font-size: 0.85rem;
            margin: 0;
            padding-bottom: 8px !important;
        }
        
        .dash-info {
            flex-direction: column;
            gap: 10px;
            margin: 15px 0 !important;
        }
        
        .dash-card {
            width: 100%;
            height: 5.5rem;
            display: flex;
            align-items: center;
        }
        
        .dash-card .left {
            margin: 12px !important;
            flex: 1;
        }
        
        .dash-card .left h3 {
            font-size: 1.5rem;
            margin: 5px 0;
        }
        
        .dash-card .right {
            margin: 12px !important;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 60px;
        }
        
        .dash-card .right i {
            font-size: 1.5rem !important;
            padding: 8px !important;
            min-width: 40px;
            min-height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px !important;
        }
        
        .info-boxes {
            flex-direction: column;
            gap: 15px;
        }
        
        .box-size {
            width: 100%;
            padding: 12px !important;
        }
        
        .bill-head {
            margin-bottom: 12px;
        }
        
        .bill-title {
            font-size: 1rem !important;
        }
        
        .payble-item {
            margin: 8px 0 !important;
            padding: 10px !important;
        }
        
        .shortcuts {
            flex-direction: column;
            gap: 10px;
        }
        
        .shortcut-box {
            width: 100%;
        }
        
        .shortcut-box a {
            display: block;
            padding: 15px !important;
            font-size: 0.9rem;
            text-align: center;
        }
        
        .notific {
            margin-bottom: 12px;
        }
        
        .icon-para {
            gap: 5px;
            align-items: center;
            margin-top: 5px;
        }
        
        .icon-para p {
            margin: 0;
            font-size: 0.8rem;
        }
    }

    /* ==== EXTRA SMALL MOBILE (below 320px) ==== */
    @media screen and (max-width: 319px) {
        .resident-dashboard-container {
            padding: 0 5px;
        }
        
        .dash-title h1 {
            font-size: 1.1rem;
        }
        
        .dash-title p {
            font-size: 0.75rem;
        }
        
        .dash-card {
            height: 5rem;
        }
        
        .dash-card .left h3 {
            font-size: 1.3rem;
        }
        
        .dash-card .right i {
            font-size: 1.3rem !important;
            padding: 6px !important;
            min-width: 35px;
            min-height: 35px;
        }
        
        .box-size {
            padding: 10px !important;
        }
        
        .bill-title {
            font-size: 0.9rem !important;
        }
        
        .shortcut-box a {
            font-size: 0.8rem;
            padding: 12px !important;
        }
    }

    /* ==== LANDSCAPE ORIENTATION FOR MOBILE ==== */
    @media screen and (orientation: landscape) and (max-height: 600px) and (max-width: 1023px) {
        .dash-title {
            padding: 8px !important;
        }
        
        .dash-title h1 {
            font-size: 1.2rem;
            padding: 5px 0 !important;
        }
        
        .dash-title p {
            font-size: 0.8rem;
            padding-bottom: 5px !important;
        }
        
        .dash-card {
            height: 4.5rem;
        }
        
        .dash-card .right i {
            font-size: 1.3rem !important;
            padding: 6px !important;
        }
        
        .box-size {
            padding: 8px !important;
        }
        
        .info-boxes {
            gap: 10px;
        }
    }

    /* ==== UNIVERSAL ICON PROTECTION ==== */
    @media screen and (max-width: 1199px) {
        .dash-card {
            overflow: hidden;
            position: relative;
        }
        
        .dash-card .right {
            flex-shrink: 0;
            overflow: visible;
        }
        
        .dash-card .right i {
            white-space: nowrap;
            overflow: visible;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
    }

    /* ==== HIGH DPI SCREENS ==== */
    @media screen and (-webkit-min-device-pixel-ratio: 2),
           screen and (min-resolution: 192dpi) {
        .dash-card .right i {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
    }

    /* ==== PRINT STYLES ==== */
    @media print {
        .dash-card .right i {
            color: #000 !important;
            background: transparent !important;
        }
    }
</style>



    <body>
        <div class="resident-dashboard-container">
            <div class="dash-title bg-primary text-white ms-3 rounded-3">
                <h1 class="ms-3 pt-3 text-white">Welcome, <b class="text-white text-decoration-underline"><%= resName.first_name %> <%= resName.last_name %></b></h1>
                <p class="ms-4 pb-4">Manage your society life with ease - bills, complaints, events and more</p>
            </div>

            <div class="dash-info d-flex justify-content-between gap-5 mt-4 ms-3 ">
                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p class="mt-1 text-muted">Pending Bills</p>
                        <h3 class="fw-bold">2</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-credit-card text-danger bg-danger-subtle rounded p-3 fs-3 me-3"></i>

                    </div>

                </div>

                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p>Open Complaints</p>
                        <h3 class="fw-bold">1</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-chat-dots text-warning bg-warning-subtle p-3 fs-3 rounded me-3"></i>

                    </div>

                </div>

                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p>Upcoming Events</p>
                        <h3 class="fw-bold">3</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-calendar text-primary bg-primary-subtle p-3 fs-3 rounded me-3"></i>

                    </div>

                </div>

                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p>Your Vehicles</p>
                        <h3 class="fw-bold">2</h3>
                    </div>
                    <div class="right mt-5">
                        <i class="bi bi-car-front text-success bg-success-subtle p-3 fs-3 rounded me-3"></i>

                    </div>
                </div>
            </div>

            <div class="info-boxes d-flex justify-content-between mt-5">
                <div class="box-size bill-box border rounded p-3">
                    <div class="bill-head d-flex justify-content-between">
                        <div class="bill-title ms-3 fw-bold fs-5">Recent Bills</div>
                        <div class="bill-icon me-4">
                            <i class="bi bi-credit-card fs-4"></i>
                        </div>
                    </div>

                    <div class="payble-item d-flex justify-content-between  rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Maintenance</p>
                            <p class="text-muted">Due: 2024-01-15</p>
                        </div>
                        <div class="right pe-3 py-2">
                            <p class="fw-bold fs-5">₹3500</p>
                            <p class="amount-status text-danger">Pending</p>
                        </div>
                    </div>

                    <div class="payble-item d-flex justify-content-between  rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Water Bill</p>
                            <p class="text-muted">Due: 2024-01-20</p>
                        </div>
                        <div class="right pe-3 py-2">
                            <p class="fw-bold fs-5">₹450</p>
                            <p class="amount-status text-danger">Pending</p>
                        </div>
                    </div>

                    <div class="payble-item d-flex justify-content-between  rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Electricity</p>
                            <p class="text-muted">Due: 2024-01-10</p>
                        </div>
                        <div class="right pe-3 py-2">
                            <p class="fw-bold fs-5">₹5100</p>
                            <p class="amount-status text-success">Paid</p>
                        </div>
                    </div>
                </div>

                <div class="box-size bill-box border rounded p-3">
                    <div class="bill-head d-flex justify-content-between">
                        <div class="bill-title ms-3 fw-bold fs-5">Notification</div>
                        <div class="bill-icon me-4">
                            <i class="bi bi-bell fs-4"></i>
                        </div>
                    </div>
                    <ul>
                        <div class="notific">
                            <li class="fw-bold ">Maintenance bill due in 3 days</li>
                            <div class="icon-para d-flex text-center text-muted">
                                <i class="bi bi-clock"></i>
                                <p>1 hour ago</p>
                            </div>
                        </div>
                    </ul>

                    <ul>
                        <div class="notific">
                            <li class="fw-bold ">Society meeting scheduled for Jan 20</li>
                            <div class="icon-para d-flex text-center text-muted">
                                <i class="bi bi-clock"></i>
                                <p>1 hour ago</p>
                            </div>
                        </div>
                    </ul>

                    <ul>
                        <div class="notific">
                            <li class="fw-bold ">Your complaint #123 has been resolved</li>
                            <div class="icon-para d-flex text-center text-muted">
                                <i class="bi bi-clock"></i>
                                <p>1 hour ago</p>
                            </div>
                        </div>
                    </ul>



                </div>

                <div class="box-size bill-box border rounded p-3">
                    <div class="bill-head d-flex justify-content-between">
                        <div class="bill-title ms-3 fw-bold fs-5">Upcoming Events</div>
                        <div class="bill-icon me-4">
                            <i class="bi bi-calendar fs-4"></i>
                        </div>
                    </div>

                    <div
                        class="payble-item d-flex justify-content-between border bg-primary bg-opacity-25 rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Society Annual Meeting</p>
                            <p class="text-muted">2024-01-20 at 6:00 PM</p>
                            <p class="text-primary fw-bold">Club House</p>
                        </div>
                    </div>

                    <div
                        class="payble-item d-flex justify-content-between border bg-primary bg-opacity-25 rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Holi Celebration</p>
                            <p class="text-muted">2024-01-20 at 6:00 PM</p>
                            <p class="text-primary fw-bold">Garden Area</p>
                        </div>
                    </div>

                    <div
                        class="payble-item d-flex justify-content-between border bg-primary bg-opacity-25 rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Health Camp</p>
                            <p class="text-muted">2024-01-20 at 6:00 PM</p>
                            <p class="text-primary fw-bold">Community Hall</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="quick-action border rounded mt-4 p-3">
                <h5>Quick-Action</h5>
                <div class="shortcuts d-flex justify-content-between">
                    <div class="shortcut-box border d-flex justify-content-center rounded bg-primary bg-opacity-25">
                        <a href="/resident-billsPayment" class="text-decoration-none text-primary fw-bold p-3">
                            <i class="bi bi-credit-card text-primary "></i> Pay Bills
                        </a>
                    </div>

                    <div class="shortcut-box border d-flex justify-content-center rounded bg-danger bg-opacity-25">
                        <a href="/resident-complaints" class="text-decoration-none text-danger fw-bold p-3">
                            <i class="bi bi-credit-card text-danger "></i> File Complaint
                        </a>
                    </div>

                    <div class="shortcut-box border d-flex justify-content-center rounded bg-success bg-opacity-25">
                        <a href="/resident-bookEvent" class="text-decoration-none text-success fw-bold p-3">
                            <i class="bi bi-credit-card text-success "></i> Book Event
                        </a>
                    </div>

                    <div class="shortcut-box border d-flex justify-content-center rounded bg-primary bg-opacity-25">
                        <a href="/resident-vehicleSearch" class="text-decoration-none text-primary fw-bold p-3">
                            <i class="bi bi-credit-card text-primary "></i> Vehicle Search
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </body>