<%- layout("layouts/boilerplate") %>

    <style>
        p {
            margin-bottom: 0rem !important;
        }

        .dash-card {
            width: 15rem;
            height: 8rem;
        }

        .payble-item {
            background-color: rgb(243, 241, 241);
        }

        .box-size {
            width: 23rem;
            height: auto;
            background-color: white;
        }

        .shortcut-box {
            width: 15rem;
        }

        .quick-action {
            background: white;
        }
    </style>

    <body>
        <div class="resident-dashboard-container">
            <div class="dash-title bg-primary text-white ms-3 rounded-3">
                <h1 class="ms-3 pt-3 text-white">Welcome, <b class="text-white text-decoration-underline"><%= resName.first_name %> <%= resName.last_name %></b></h1>
                <p class="ms-4 pb-4">Manage your society life with ease - bills, complaints, events and more</p>
            </div>

            <div class="dash-info d-flex justify-content-between gap-5 mt-4 ms-3 ">
                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p class="mt-1 text-muted">Pending Bills</p>
                        <h3 class="fw-bold">2</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-credit-card text-danger bg-danger-subtle rounded p-3 fs-3 me-3"></i>

                    </div>

                </div>

                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p>Open Complaints</p>
                        <h3 class="fw-bold">1</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-chat-dots text-warning bg-warning-subtle p-3 fs-3 rounded me-3"></i>

                    </div>

                </div>

                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p>Upcoming Events</p>
                        <h3 class="fw-bold">3</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-calendar text-primary bg-primary-subtle p-3 fs-3 rounded me-3"></i>

                    </div>

                </div>

                <div class="dash-card d-flex gap-5 border rounded-3 bg-white d-flex justify-content-between">
                    <div class="left ms-4 mt-4">
                        <p>Your Vehicles</p>
                        <h3 class="fw-bold">2</h3>
                    </div>
                    <div class="right mt-5">
                        <i class="bi bi-car-front text-success bg-success-subtle p-3 fs-3 rounded me-3"></i>

                    </div>
                </div>
            </div>

            <div class="info-boxes d-flex justify-content-between mt-5">
                <div class="box-size bill-box border rounded p-3">
                    <div class="bill-head d-flex justify-content-between">
                        <div class="bill-title ms-3 fw-bold fs-5">Recent Bills</div>
                        <div class="bill-icon me-4">
                            <i class="bi bi-credit-card fs-4"></i>
                        </div>
                    </div>

                    <div class="payble-item d-flex justify-content-between  rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Maintenance</p>
                            <p class="text-muted">Due: 2024-01-15</p>
                        </div>
                        <div class="right pe-3 py-2">
                            <p class="fw-bold fs-5">₹3500</p>
                            <p class="amount-status text-danger">Pending</p>
                        </div>
                    </div>

                    <div class="payble-item d-flex justify-content-between  rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Water Bill</p>
                            <p class="text-muted">Due: 2024-01-20</p>
                        </div>
                        <div class="right pe-3 py-2">
                            <p class="fw-bold fs-5">₹450</p>
                            <p class="amount-status text-danger">Pending</p>
                        </div>
                    </div>

                    <div class="payble-item d-flex justify-content-between  rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Electricity</p>
                            <p class="text-muted">Due: 2024-01-10</p>
                        </div>
                        <div class="right pe-3 py-2">
                            <p class="fw-bold fs-5">₹5100</p>
                            <p class="amount-status text-success">Paid</p>
                        </div>
                    </div>
                </div>

                <div class="box-size bill-box border rounded p-3">
                    <div class="bill-head d-flex justify-content-between">
                        <div class="bill-title ms-3 fw-bold fs-5">Notification</div>
                        <div class="bill-icon me-4">
                            <i class="bi bi-bell fs-4"></i>
                        </div>
                    </div>
                    <ul>
                        <div class="notific">
                            <li class="fw-bold ">Maintenance bill due in 3 days</li>
                            <div class="icon-para d-flex text-center text-muted">
                                <i class="bi bi-clock"></i>
                                <p>1 hour ago</p>
                            </div>
                        </div>
                    </ul>

                    <ul>
                        <div class="notific">
                            <li class="fw-bold ">Society meeting scheduled for Jan 20</li>
                            <div class="icon-para d-flex text-center text-muted">
                                <i class="bi bi-clock"></i>
                                <p>1 hour ago</p>
                            </div>
                        </div>
                    </ul>

                    <ul>
                        <div class="notific">
                            <li class="fw-bold ">Your complaint #123 has been resolved</li>
                            <div class="icon-para d-flex text-center text-muted">
                                <i class="bi bi-clock"></i>
                                <p>1 hour ago</p>
                            </div>
                        </div>
                    </ul>



                </div>

                <div class="box-size bill-box border rounded p-3">
                    <div class="bill-head d-flex justify-content-between">
                        <div class="bill-title ms-3 fw-bold fs-5">Upcoming Events</div>
                        <div class="bill-icon me-4">
                            <i class="bi bi-calendar fs-4"></i>
                        </div>
                    </div>

                    <div
                        class="payble-item d-flex justify-content-between border bg-primary bg-opacity-25 rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Society Annual Meeting</p>
                            <p class="text-muted">2024-01-20 at 6:00 PM</p>
                            <p class="text-primary fw-bold">Club House</p>
                        </div>
                    </div>

                    <div
                        class="payble-item d-flex justify-content-between border bg-primary bg-opacity-25 rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Holi Celebration</p>
                            <p class="text-muted">2024-01-20 at 6:00 PM</p>
                            <p class="text-primary fw-bold">Garden Area</p>
                        </div>
                    </div>

                    <div
                        class="payble-item d-flex justify-content-between border bg-primary bg-opacity-25 rounded m-3 ">
                        <div class="left ps-3 py-2">
                            <p class="fw-bold">Health Camp</p>
                            <p class="text-muted">2024-01-20 at 6:00 PM</p>
                            <p class="text-primary fw-bold">Community Hall</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="quick-action border rounded mt-4 p-3">
                <h5>Quick-Action</h5>
                <div class="shortcuts d-flex justify-content-between">
                    <div class="shortcut-box border d-flex justify-content-center rounded bg-primary bg-opacity-25">
                        <a href="/resident-billsPayment" class="text-decoration-none text-primary fw-bold p-3">
                            <i class="bi bi-credit-card text-primary "></i> Pay Bills
                        </a>
                    </div>

                    <div class="shortcut-box border d-flex justify-content-center rounded bg-danger bg-opacity-25">
                        <a href="/resident-complaints" class="text-decoration-none text-danger fw-bold p-3">
                            <i class="bi bi-credit-card text-danger "></i> File Complaint
                        </a>
                    </div>

                    <div class="shortcut-box border d-flex justify-content-center rounded bg-success bg-opacity-25">
                        <a href="/resident-bookEvent" class="text-decoration-none text-success fw-bold p-3">
                            <i class="bi bi-credit-card text-success "></i> Book Event
                        </a>
                    </div>

                    <div class="shortcut-box border d-flex justify-content-center rounded bg-primary bg-opacity-25">
                        <a href="/resident-vehicleSearch" class="text-decoration-none text-primary fw-bold p-3">
                            <i class="bi bi-credit-card text-primary "></i> Vehicle Search
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </body>