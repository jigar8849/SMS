<%- layout("layouts/boilerplate") %>
<style>
        .dash-card {
            width: 16rem;
            height: 8rem;
        }

        .blok {
            margin-top: 3rem;
            height: 8rem;
            width: 16rem;
        }

        @media (max-width: 576px) {
  /* Container padding adjustment */
  .owner-list-container {
    padding: 0 1rem;
  }

  /* Header section responsive */
  .event-container {
    padding: 0 1rem;
  }

  .com-header h2 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
  }

  .com-header p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  /* Block boxes responsive - 2 per row */
  .block-box {
    gap: 1rem;
    justify-content: space-between;
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .blok {
    width: 48%;
    height: 6rem;
    margin-top: 1rem;
    min-width: 140px;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blok a {
    text-decoration: none;
    color: inherit;
    font-weight: bold;
  }

  
  /* If only one block, make it full width */
   .blok:only-child {
    width: 100%;
  }

  /* Remove extra margins for better spacing */
  .block-box {
    margin-bottom: 2rem;
  }
}

@media (max-width: 768px) {
  /* Container padding */
  .owner-list-container,
  .event-container {
    padding: 0 1rem;
  }

  /* Header text sizes */
  .com-header h2 {
    font-size: 1.3rem;
    margin-bottom: 0.6rem;
  }
  .com-header p {
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  /* Block boxes container */
  .block-box {
    display: flex !important;
    flex-wrap: wrap !important;    /* allows wrapping */
    gap: 1.5rem !important;         /* space between boxes */
    justify-content: flex-start !important;
    padding-left: 1rem;
    padding-right: 1rem;
    margin-left: 0;
    margin-right: 0;
  }

  /* Each block box - 2 per row */
 .blok {
    flex: 0 0 calc(50% - 0.75rem) !important;
    max-width: calc(50% - 0.75rem);
    height: 6.5rem !important;
    margin-top: 1rem !important;
    font-size: 1rem;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    border-radius: 0.5rem !important;
    font-weight: 700 !important;
    background: #fff !important;
    border: 1px solid #dee2e6 !important;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    box-sizing: border-box;
  }

  /* Anchor inside block */
  .blok a {
    color: inherit !important;
    text-decoration: none !important;
    width: 100%;
    text-align: center;
  }


  /* If only one block, take full width */
   .blok:only-child {
    flex: 0 0 100% !important;
    max-width: 100% !important;
  }
}


    </style>
    <body>
        <div class="owner-list-container">
            <div class="event-container">
                <div class="com-header d-flex justify-content-between">
                    <div class="left">
                        <h2 class="fw-bold">Owners & Residents List</h2>
                        <p class="text-muted ">Directory of all society members</p>
                    </div>
                </div>
            </div>
        </div>



        <div class="block-box d-flex flex-wrap justify-content-center gap-4 mb-4">
                <% for (let i=0; i < BlockList[0].total_block; i++) { %>
                    <div
                        class="box-a blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white">
                        <a href="/resident-ownerList/<%= String.fromCharCode(65 + i) %>">
                            Block-<%= String.fromCharCode(65 + i) %>
                        </a>
                    </div>
                    <% } %>
            </div>
      
    </body>