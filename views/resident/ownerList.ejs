<%- layout("layouts/boilerplate") %>
<style>
        .dash-card {
            width: 16rem;
            height: 8rem;
        }

        .blok {
            margin-top: 3rem;
            height: 8rem;
            width: 16rem;
        }

        @media (max-width: 576px) {
  /* Container padding adjustment */
  .owner-list-container {
    padding: 0 1rem;
  }

  /* Header section responsive */
  .event-container {
    padding: 0 1rem;
  }

  .com-header h2 {
    font-size: 1.15rem;
    margin-bottom: 0.5rem;
  }

  .com-header p {
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  /* Block boxes responsive - 2 per row */
  .block-box {
    gap: 1rem;
    justify-content: space-between;
    margin-left: 1rem;
    margin-right: 1rem;
  }

  .blok {
    width: 48%;
    height: 6rem;
    margin-top: 1rem;
    min-width: 140px;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blok a {
    text-decoration: none;
    color: inherit;
    font-weight: bold;
  }

  
  /* If only one block, make it full width */
   .blok:only-child {
    width: 100%;
  }

  /* Remove extra margins for better spacing */
  .block-box {
    margin-bottom: 2rem;
  }
}

    </style>
    <body>
        <div class="owner-list-container">
            <div class="event-container">
                <div class="com-header d-flex justify-content-between">
                    <div class="left">
                        <h2 class="fw-bold">Owners & Residents List</h2>
                        <p class="text-muted ">Directory of all society members</p>
                    </div>
                </div>
            </div>
        </div>



        <div class="block-box d-flex flex-wrap justify-content-center gap-4 mb-4">
                <% for (let i=0; i < BlockList[0].total_block; i++) { %>
                    <div
                        class="box-a blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white">
                        <a href="/resident-ownerList/<%= String.fromCharCode(65 + i) %>">
                            Block-<%= String.fromCharCode(65 + i) %>
                        </a>
                    </div>
                    <% } %>
            </div>
      
    </body>