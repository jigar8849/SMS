<%- layout("layouts/boilerplate") %>
<style>
    .dash-card {
        width: 16rem;
        height: 8rem;
    }

    .blok {
        margin-top: 3rem;
        height: 8rem;
        width: 16rem;
    }

    /* Desktop and Large Screens (default) */
    .block-box {
        gap: 1.5rem;
    }

    /* Large Desktop Screens */
    @media screen and (min-width: 1400px) {
        .blok {
            width: 18rem;
            height: 9rem;
        }
        .dash-card {
            width: 18rem;
            height: 9rem;
        }
        .block-box {
            gap: 2rem;
        }
    }

    /* Desktop */
    @media screen and (max-width: 1199px) {
        .blok {
            width: 15rem;
            height: 7.5rem;
        }
        .dash-card {
            width: 15rem;
            height: 7.5rem;
        }
    }

    /* Large Tablets (iPad Pro) */
    @media screen and (max-width: 1024px) {
        .blok {
            width: 14rem;
            height: 7rem;
            margin-top: 2rem;
        }
        .dash-card {
            width: 14rem;
            height: 7rem;
        }
        .block-box {
            gap: 1rem;
            padding: 0 1rem;
        }
        .com-header h2 {
            font-size: 1.5rem;
        }
    }

    /* Standard Tablets (iPad) */
    @media screen and (max-width: 768px) {
        .blok {
            width: 12rem;
            height: 6rem;
            margin-top: 1.5rem;
        }
        .dash-card {
            width: 12rem;
            height: 6rem;
        }
        .block-box {
            gap: 0.8rem;
            padding: 0 1rem;
        }
        .com-header {
            flex-direction: column;
            text-align: center;
        }
        .com-header h2 {
            font-size: 1.4rem;
            margin-bottom: 0.5rem;
        }
        .owner-list-container {
            padding: 1rem;
        }
    }

    /* Small Tablets and Large Phones */
    @media screen and (max-width: 600px) {
        .blok {
            width: 10rem;
            height: 5rem;
            margin-top: 1rem;
        }
        .dash-card {
            width: 10rem;
            height: 5rem;
        }
        .block-box {
            gap: 0.6rem;
            padding: 0 0.5rem;
        }
        .com-header h2 {
            font-size: 1.2rem;
        }
        .com-header p {
            font-size: 0.9rem;
        }
    }

    /* Standard Mobile Phones */
    @media screen and (max-width: 480px) {
        .blok {
            width: 8rem;
            height: 4rem;
            margin-top: 0.8rem;
            font-size: 0.9rem;
        }
        .dash-card {
            width: 8rem;
            height: 4rem;
        }
        .block-box {
            gap: 0.5rem;
            padding: 0 0.5rem;
            justify-content: space-around;
        }
        .com-header h2 {
            font-size: 1.1rem;
        }
        .com-header p {
            font-size: 0.8rem;
        }
        .owner-list-container {
            padding: 0.5rem;
        }
        .event-container {
            padding: 0.5rem;
        }
    }

    /* Small Mobile Phones */
    @media screen and (max-width: 390px) {
        .blok {
            width: 7rem;
            height: 3.5rem;
            margin-top: 0.6rem;
            font-size: 0.8rem;
        }
        .dash-card {
            width: 7rem;
            height: 3.5rem;
        }
        .block-box {
            gap: 0.4rem;
            padding: 0 0.3rem;
        }
        .com-header h2 {
            font-size: 1rem;
        }
        .com-header p {
            font-size: 0.75rem;
        }
    }

    /* Extra Small Mobile Phones */
    @media screen and (max-width: 320px) {
        .blok {
            width: 6rem;
            height: 3rem;
            margin-top: 0.5rem;
            font-size: 0.75rem;
        }
        .dash-card {
            width: 6rem;
            height: 3rem;
        }
        .block-box {
            gap: 0.3rem;
            padding: 0 0.2rem;
        }
        .com-header h2 {
            font-size: 0.9rem;
        }
        .com-header p {
            font-size: 0.7rem;
        }
    }

    /* Landscape orientation for mobile devices */
    @media screen and (max-height: 500px) and (orientation: landscape) {
        .blok {
            margin-top: 0.5rem;
            height: 3rem;
        }
        .dash-card {
            height: 3rem;
        }
        .owner-list-container {
            padding: 0.5rem;
        }
        .event-container {
            padding: 0.3rem;
        }
    }

    /* High DPI displays */
    @media screen and (-webkit-min-device-pixel-ratio: 2),
           screen and (min-resolution: 192dpi) {
        .blok {
            border-width: 0.5px;
        }
    }

    /* Specific device targeting */
    
    /* iPhone 14 Pro Max, iPhone 13 Pro Max, iPhone 12 Pro Max */
    @media screen and (max-width: 430px) {
        .block-box {
            max-width: 400px;
        }
    }

    /* iPhone 14, iPhone 13, iPhone 12 */
    @media screen and (max-width: 390px) {
        .block-box {
            max-width: 360px;
        }
    }

    /* iPhone SE, iPhone 8 */
    @media screen and (max-width: 375px) {
        .block-box {
            max-width: 345px;
        }
    }

    /* Samsung Galaxy S series, Google Pixel */
    @media screen and (max-width: 360px) {
        .block-box {
            max-width: 330px;
        }
    }
</style>

<body>
    <div class="owner-list-container">
        <div class="event-container">
            <div class="com-header d-flex justify-content-between">
                <div class="left">
                    <h2 class="fw-bold">Owners & Residents List</h2>
                    <p class="text-muted">Directory of all society members</p>
                </div>
            </div>
        </div>
    </div>

    <div class="block-box d-flex flex-wrap justify-content-center gap-4 mb-4">
        <% for (let i=0; i < BlockList[0].total_block; i++) { %>
            <div class="box-a blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white">
                <a href="/resident/ownerList/<%= String.fromCharCode(65 + i) %>">
                    Block-<%= String.fromCharCode(65 + i) %>
                </a>
            </div>
        <% } %>
    </div>
</body>
