        }

        .no-bills {
            padding: 20px;
            text-align: center;
            color: #666;
        }

        /* === IMPROVED BILL SECTION STYLES === */
        .bill-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 18px;
            padding: 0 1.5rem 2rem;
        }

        .bill-card {
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            box-shadow: 0 1px 3px rgba(0, 0, 0, .04);
            display: flex;
            flex-direction: column;
            transition: box-shadow .2s ease;
        }

        .bill-card:hover {
            box-shadow: 0 4px 12px rgba(0, 0, 0, .08);
        }

        .bill-card__main {
            padding: 1.25rem 1.5rem;
            display: flex;
            justify-content: space-between;
            gap: 1rem;
        }

        .bill-card__footer {
            border-top: 1px solid #f1f3f5;
            padding: .75rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .bill-title {
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: .25rem;
        }

        .badge {
            font-size: .75rem;
            padding: 4px 10px;
            border-radius: 7px;
        }

        .status-badge {
            background: #fef3c7;
            color: #92400e;
        }

        .is-paid .status-badge {
            background: #4ade80;
            color: #065f46;
        }

        .overdue-badge {
            background: #fee2e2;
            color: #991b1b;
            margin-top: .25rem;
            display: inline-block;
        }

        .bill-amount {
            font-size: 1.5rem;
            font-weight: 700;
            white-space: nowrap;
        }

        .pay-btn {
            background: #2563eb;
            color: #fff;
            padding: 6px 16px;
            border-radius: 8px;
            font-weight: 500;
            border: none;
            transition: background .2s;
        }

        .pay-btn:hover {
            background: #1d4ed8;
        }

        .bill-select-all input {
            cursor: pointer;
        }

        .bill-select-all span {
            font-size: .9rem;
        }

        .bill-card .form-check-input {
            margin-top: 3px;
            cursor: pointer;
        }

        .bill-card .form-check-input:focus {
            box-shadow: 0 0 0 3px rgba(37, 99, 235, .3);
            border-color: #2563eb;
        }

        .bill-sub {
            font-size: 0.9rem;
        }

