<%- layout("layouts/boilerplate") %>
    <style>
        .quick-pay-card {
            background: linear-gradient(90deg, #1d4ed8, #2563eb);
            color: white;
            border-radius: 12px;
            padding: 20px 30px;
        }

        .pay-btn {
            background-color: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            padding: 8px 18px;
            border-radius: 8px;
            font-weight: 500;
        }

        .pay-btn:hover {
            background-color: rgba(255, 255, 255, 0.3);
        }

        hr {
            margin: 0rem !important;
        }

        .status-badge {
            font-size: 0.75rem;
            background-color: #fef3c7;
            color: #92400e;
            padding: 4px 8px;
            border-radius: 8px;
            font-weight: 500;
        }

