<%- layout("layouts/boilerplate") %>

    <style>
        .dash-card {
            width: 16rem;
            height: 8rem;
        }

        .blok {
            margin-top: 3rem;
            height: 8rem;
            width: 16rem;
        }


  @media (max-width: 576px) {
  /* Dashboard cards responsive - 2 per row */
  .dash-info {
    flex-wrap: wrap !important;
    gap: 1rem !important;
    justify-content: space-between !important;
  }
  .dash-card {
    width: 48% !important;
    min-width: 145px;
    height: auto !important;
    margin-bottom: 1rem;
    font-size: 0.95rem;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    gap: 0.2rem !important;
    padding: 1rem 0.25rem !important;
    text-align: center;
  }
  .dash-card:only-child { 
    width: 100% !important; 
  }
  .dash-card .left,
  .dash-card .right { 
    margin: 0 !important; 
    padding: 0 !important; 
  }
  .dash-card .left { 
    order: 1; 
    width: 100%; 
    margin-bottom: 0.15rem; 
  }
  .dash-card .right { 
    order: 2; 
    width: 100%; 
    margin-top: 0.2rem; 
  }

  /* Header stays in single row - just adjust font size */
  .flat-container h4.fw-bold {
    font-size: 1.15rem !important;
  }

  /* Block boxes responsive - 2 per row */
  .block-box {
    gap: 1rem !important;
    justify-content: space-between !important;
  }
  .blok {
    width: 48% !important;
    height: 6rem !important;
    margin-top: 1rem !important;
    min-width: 140px;
    font-size: 0.95rem;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
  }
  .blok a {
    text-decoration: none;
    color: inherit;
    font-weight: bold;
  }
  
  /* If only one block, make it full width */
  .blok:only-child {
    width: 100% !important;
  }
}


    </style>

    <body>
        <div class="flat-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold">Flat Management</h4>
                <button class="btn btn-primary">
                    <i class="bi bi-download"></i> Download PDF
                </button>
            </div>


            <div class="dash-info d-flex gap-5 mt-4 d-flex justify-content-center">
                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p class="mt-1">Total Blocks</p>
                        <h3 class="fw-bold">
                            <%= blockList[0].total_block %>
                        </h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-bicycle text-white bg-primary p-2 rounded-circle fs-3"></i>
                    </div>

                </div>

                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p>Total Flats</p>
                        <h3 class="fw-bold">
                            <%= blockList[0].total_flat %>
                        </h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-car-front text-dark bg-success bg-opacity-25 p-2 rounded-circle fs-4"></i>
                    </div>

                </div>

                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p>Available Slots</p>
                        <h3 class="fw-bold">
                            <%= blockList[0].total_flat - totalNumberFlats %>
                        </h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-plus-lg text-white bg-success  p-2 rounded-circle fs-4"></i>
                    </div>

                </div>

                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p>Occupancy Rate</p>
                        <h3 class="fw-bold">
                            <%= Math.round((totalNumberFlats/blockList[0].total_flat)*100) %>%
                        </h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-car-front-fill text-white p-2 rounded-circle fs-4"
                            style="background-color: #a855f7;"></i>
                    </div>
                </div>
            </div>

            <div class="block-box d-flex flex-wrap justify-content-center gap-4 mb-4">
                <% for (let i=0; i < blockList[0].total_block; i++) { %>
                    <div
                        class="box-a blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white">
                        <a href="/flatList/<%= String.fromCharCode(65 + i) %>">
                            Block-<%= String.fromCharCode(65 + i) %>
                        </a>
                    </div>
                    <% } %>
            </div>




        </div>
    </body>