<%- layout("layouts/boilerplate") %>

    <style>
        .dash-card {
            width: 16rem;
            height: 8rem;
        }
        .blok{
            margin-top: 3rem;
            height: 8rem;
            width: 16rem;
        }
    </style>

    <body>
        <div class="flat-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold">Flat Management</h4>
                <button class="btn btn-primary">
                    <i class="bi bi-download"></i> Download PDF
                </button>
            </div>


            <div class="dash-info d-flex gap-5 mt-4 d-flex justify-content-center">
                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p class="mt-1">Total Blocks</p>
                        <h3 class="fw-bold">4</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-bicycle text-white bg-primary p-2 rounded-circle fs-3"></i>
                    </div>

                </div>

                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p>Total Flats</p>
                        <h3 class="fw-bold">146</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-car-front text-dark bg-success bg-opacity-25 p-2 rounded-circle fs-4"></i>
                    </div>

                </div>

                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p>Available Slots</p>
                        <h3 class="fw-bold">7</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-plus-lg text-white bg-success  p-2 rounded-circle fs-4"></i>
                    </div>

                </div>

                <div class="dash-card d-flex gap-5 rounded-3 bg-white">
                    <div class="left ms-4 mt-4">
                        <p>Occupancy Rate</p>
                        <h3 class="fw-bold">88%</h3>
                    </div>
                    <div class="right mt-5 pb-2">
                        <i class="bi bi-car-front-fill text-white p-2 rounded-circle fs-4"
                            style="background-color: #a855f7;"></i>
                    </div>
                </div>
            </div>

            <div class="block-box d-flex justify-content-center gap-4 mb-4">
                <div class="box-a blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white"><a href="">Block-A</a></div>
                <div class="box-b blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white"><a href="">Block-b</a></div>
                <div class="box-c blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white"><a href="">Block-c</a></div>
                <div class="box-d blok border d-flex justify-content-center align-items-center rounded-3 fw-bold bg-white"><a href="">Block-d</a></div>
            </div>

        </div>
    </body>