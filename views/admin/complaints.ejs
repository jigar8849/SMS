<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Complaints</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        h1 { color: #333; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        tr:nth-child(even) { background-color: #f9f9f9; }
        .status { padding: 4px 8px; border-radius: 4px; color: white; }
        .pending { background-color: #ffc107; }
        .complete { background-color: #28a745; }
        .on-hold { background-color: #6c757d; }
        .reject { background-color: #dc3545; }
        .inprogress { background-color: #007bff; }
    </style>
</head>
<body>
    <h1>Complaints Management</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Priority</th>
                <th>Description</th>
                <th>Resident</th>
                <th>Block-Flat</th>
                <th>Status</th>
                <th>Date</th>
                <th>Attachments</th>
            </tr>
        </thead>
        <tbody>
            <% complainsDetails.forEach(complaint => { %>
                <tr>
                    <td><%= complaint.title %></td>
                    <td><%= complaint.category %></td>
                    <td><%= complaint.priority %></td>
                    <td><%= complaint.description %></td>
                    <td><%= complaint.resident ? `${complaint.resident.first_name} ${complaint.resident.last_name}` : 'Unknown' %></td>
                    <td><%= complaint.resident ? `${complaint.resident.block}-${complaint.resident.flat_number}` : 'N/A' %></td>
                    <td>
                        <span class="status <%= complaint.status.toLowerCase().replace('-', '') %>">
                            <%= complaint.status === "Complete" ? "Resolved" :
                                complaint.status === "Reject" ? "Rejected" :
                                complaint.status === "InProgress" ? "In-Progress" :
                                complaint.status === "On-hold" ? "Pending" : complaint.status %>
                        </span>
                    </td>
                    <td><%= new Date(complaint.created_at).toLocaleDateString() %></td>
                    <td><%= complaint.Attachments ? 'Yes' : 'No' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
