<%- layout("layouts/boilerplate") %>

<style>
  body {
    background-color: #f3f4f6;
  }
  .status-badge {
    background-color: #d1fae5;
    color: #10b981;
    font-size: 0.8rem;
    padding: 4px 10px;
    border-radius: 12px;
  }
  .action-icons i {
    cursor: pointer;
    margin-right: 10px;
  }
  .table-responsive {
    border-radius: 10px;
    overflow: hidden;
  }



  @media (max-width: 576px) {
  .admin-resident {
    padding: 0 2vw !important;
  }
  /* Stack filter bar vertically */
  .admin-resident .d-flex.flex-wrap.gap-2.align-items-center,
  .admin-resident .d-flex.justify-content-between.align-items-center.mb-4 {
    /* flex-direction: column !important; */
    align-items: stretch !important;
    gap: 0.75rem !important;
  }
  
  .admin-resident .btn {
    width: 40% !important;
  }

  .searchFilter{
    width: 5rem !important;
  }


  /* Responsive scroll for table */
  .table-responsive {
        width: 100% !important;
        /* Make it as wide as the parent, not the viewport */
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        border-radius: 6px !important;
        margin-left: 0 !important;
        margin-right: 0 !important;
        background: #fff;
      }
 table.table {
        min-width: 650px;
        font-size: 0.95rem !important;
      }

      th,
      td {
        white-space: nowrap;
        padding: 0.5rem 0.4rem !important;
        font-size: 0.97rem !important;
        min-width: 90px;
        word-break: break-word;
      }
}


@media (max-width: 768px) {
  /* Container padding */
  .compailin-container {
    padding: 1rem !important;
  }

  /* Header */
  .compailin-container h4.fw-bold {
    font-size: 1.3rem !important;
    padding-left: 1rem;
    margin-bottom: 1rem;
  }

  /* Dash cards: two per row with spacing */
  .dash-info {
    display: flex !important;
    flex-wrap: wrap !important;
    gap: 1.25rem !important;
    justify-content: space-between !important;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .dash-card {
    width: 48% !important;
    min-width: 150px;
    height: auto !important;
    margin-bottom: 1.25rem;
    padding: 1rem !important;
    border-radius: 1rem !important;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.07);
    background: #fff;
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
    gap: 0.5rem !important;
  }

  /* Dash card content */
  .dash-card h3 {
    font-size: 1.4rem !important;
  }
  .dash-card p {
    font-size: 0.9rem !important;
    margin-bottom: 0.4rem !important;
  }
  .dash-card i {
    font-size: 1.8rem !important;
    padding: 0.6rem !important;
  }

  /* Search and filters in single horizontal row */
  .bg-white.p-3.rounded.mb-3.d-flex {
    display: flex !important;
    flex-direction: row !important;
    flex-wrap: nowrap !important;
    gap: 0.3rem !important;
    align-items: center !important;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  /* Search input takes ~70% */
  .flex-grow-1 {
    flex: 0 0 70% !important;
    width: 70% !important;
    min-width: 0;
  }

  /* Filters share 30% (split approx 15% each) */
  #blockFilter, #statusFilter {
    flex: 0 0 15% !important;
    width: 15% !important;
    min-width: 0 !important;
  }

  .input-group {
    width: 100% !important;
    min-width: 0 !important;
  }

  /* Hide search button on tablet/mobile */
  #searchBtn {
    display: none !important;
  }

  /* Table responsiveness and typography */
  .table-responsive {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .table {
    font-size: 0.9rem !important;
    min-width: 650px;
  }

  /* Table cells with ellipsis and nowrap */
  .table th,
  .table td {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    padding: 0.5rem 0.3rem !important;
    min-width: 90px;
    word-break: break-word;
  }
  .table th:first-child,
  .table td:first-child {
    max-width: 170px;
    white-space: normal;
  }

  .table .small {
    font-size: 0.75rem !important;
  }

  .badge {
    font-size: 0.7rem !important;
    padding: 0.3em 0.5em !important;
  }

  .btn-sm {
    font-size: 0.75rem !important;
    padding: 0.3rem 0.5rem !important;
  }

  /* Table text formatting */
  .table td strong {
    font-size: 0.9rem !important;
  }

  .table .text-muted.small {
    font-size: 0.75rem !important;
    line-height: 1.3;
  }
}

</style>

<body>
  <div class="admin-resident py-2">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold">Resident Management</h4>
      <a href="/addNewResident" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Resident
      </a>
    </div>

    <!-- Search & Filters -->
    <div class=" bg-white p-3 rounded mb-3 d-flex flex-wrap gap-2 align-items-center">
      <div class="flex-grow-1">
        <div class="input-group">
          <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
          <input type="text" id="searchInput" class="searchFilter form-control border-start-0"
            placeholder="Search residents by name, flat number, or block...">
        </div>
      </div>
      <select id="blockFilter" class="form-select w-auto">
        <option value="">All Blocks</option>
        <option value="A">Block A</option>
        <option value="B">Block B</option>
        <option value="C">Block C</option>
        <option value="D">Block D</option>
      </select>
      <select id="statusFilter" class="form-select w-auto">
        <option value="">All Status</option>
        <option value="Active">Active</option>
        <option value="In-Active">In-Active</option>
      </select>
    </div>

    <!-- Table -->
    <div class="table-responsive bg-white rounded shadow-sm">
      <table class="table mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th>Resident</th>
            <th>Flat Details</th>
            <th>Contact</th>
            <th>Family & Vehicles</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% allMemberDetails.forEach(member => { %>
            <tr class="residentRow"
              data-name="<%= member.first_name + ' ' + member.last_name %>"
              data-flat="<%= member.flat_number %>"
              data-block="<%= member.block %>"
              data-status="<%= member.status %>">
              <td>
                <strong><%= member.first_name %> <%= member.last_name %></strong><br>
                <small class="text-muted">ID: 1</small>
              </td>
              <td>
                Block <%= member.block %>-<%= member.flat_number %><br>
                <small class="text-muted">Joined: 2023-01-15</small>
              </td>
              <td>
                <%= member.email %><br>
                <small class="text-muted"><%= member.mobile_number %></small>
              </td>
              <td>
                <%= member.number_of_member %> Members<br>
                2 Vehicles
              </td>
              <td>
                <span class="status-badge"><%= member.status %></span>
              </td>
              <td class="action-icons text-primary d-flex">
                <i class="bi bi-eye-fill"></i>
                <form action="/residents/<%= member._id %>/edit">
                  <button type="submit" class="border-0 bg-white">
                    <i class="bi bi-pencil-square text-warning"></i>
                  </button>
                </form>
                <form action="/residents/<%= member._id %>?_method=DELETE" method="post">
                  <button class="border-0 bg-white"><i class="bi bi-trash3-fill text-danger"></i></button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Export Button -->
    <div class="d-flex justify-content-end mt-4">
      <button class="btn btn-outline-primary">
        <i class="bi bi-download me-2"></i> Export Resident List
      </button>
    </div>
  </div>

  <script>
    const searchInput = document.getElementById("searchInput");
    const blockFilter = document.getElementById("blockFilter");
    const statusFilter = document.getElementById("statusFilter");
    const residentRows = document.querySelectorAll(".residentRow");

    function filterResidents() {
      const search = searchInput.value.toLowerCase();
      const block = blockFilter.value.toLowerCase();
      const status = statusFilter.value.toLowerCase();

      residentRows.forEach(row => {
        const name = row.dataset.name.toLowerCase();
        const flat = row.dataset.flat.toLowerCase();
        const rowBlock = row.dataset.block.toLowerCase();
        const rowStatus = row.dataset.status.toLowerCase();

        const matchesSearch = name.includes(search) || flat.includes(search) || rowBlock.includes(search);
        const matchesBlock = block === "" || rowBlock === block;
        const matchesStatus = status === "" || rowStatus === status.toLowerCase();

        if (matchesSearch && matchesBlock && matchesStatus) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });
    }

    // Live search
    searchInput.addEventListener("keyup", filterResidents);

    // Filters
    blockFilter.addEventListener("change", filterResidents);
    statusFilter.addEventListener("change", filterResidents);
  </script>
</body>
