<%- layout("layouts/boilerplate") %>

<style>
  .dash-card {
    width: 16.7rem;
    height: 8rem;
  }

  .serach-box {
    height: 5rem;
  }

  .select-status {
    height: 2.9rem;
    margin-top: 1rem;
    margin-right: 1rem;
    width: 12rem;
  }

  .status-badge {
    font-size: 0.8rem;
  }


@media (max-width: 576px) {
  /* Dashboard card grid responsive */
  .dash-info {
    flex-wrap: wrap !important;
    gap: 1rem !important;
    justify-content: space-between !important;
  }
  .dash-card {
    width: 48% !important;
    min-width: 145px;
    height: auto !important;
    margin-bottom: 1rem;
    font-size: 1rem;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    gap: 0.2rem !important;
    padding: 1rem 0.25rem !important;
    text-align: center;
  }
  .dash-card:only-child { 
    width: 100% !important; 
  }
  .dash-card .left,
  .dash-card .right { 
    margin: 0 !important; 
    padding: 0 !important; 
  }
  .dash-card .left { 
    order: 1; 
    width: 100%; 
    margin-bottom: 0.15rem; 
  }
  .dash-card .right { 
    order: 2; 
    width: 100%; 
    margin-top: 0.2rem; 
  }

  /* Header stays in single row - just adjust font size */
  .emp-container h4.fw-bold {
    font-size: 1.15rem !important;
  }

  /* Table font and space tweaks */
  .table { 
    font-size: 0.92rem !important; 
  }
  .table td, .table th {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
  }
}


@media (max-width: 768px) {
  body {
    margin: 0 !important;
    padding: 0 !important;
    width: 100vw;
    height: 100vh;
    box-sizing: border-box;
  }

  /* Header */
  .empHeader {
    flex-direction: row !important;
    justify-content: space-between !important;
    align-items: center !important;
    gap: 1rem;
    padding: 0 1rem;
  }
  
  .empHeader h4.fw-bold {
    font-size: 1.25rem !important;
    margin: 0;
    white-space: nowrap;
  }
  
  .empHeader a.btn {
    flex-shrink: 0;
    padding: 0.5rem 1.2rem;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  /* Dashboard cards */
  .dash-info {
    flex-wrap: wrap !important;
    gap: 1.25rem !important;
    justify-content: space-between !important;
    padding: 0 1rem;
  }

  .dash-card {
    width: 48% !important;
    min-width: 150px;
    height: auto !important;
    font-size: 1rem;
    margin-bottom: 1.25rem;
    padding: 1rem;
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    gap: 0.5rem !important;
    border-radius: 1rem;
    background-color: white;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .dash-card .left, 
  .dash-card .right {
    margin: 0 !important;
    padding: 0 !important;
  }

  .dash-card .left {
    width: auto;
  }
  .dash-card .right {
    font-size: 2.5rem !important;
  }

  /* Search Section: input + filter in one row */
  .serach-box {
    display: flex !important;
    flex-direction: row !important;
    gap: 0.5rem !important;
    padding: 0 1rem;
    align-items: center;
  }
  
  .serach-box .input-group {
    flex: 0 0 90% !important;
    width: 90% !important;
    min-width: 0;
  }
  
  .serach-box .select-status {
    flex: 0 0 10% !important;
    width: 10% !important;
    min-width: 0;
    margin-top: 0 !important;
  }
  
  /* Table responsiveness and typography */
  .table-responsive {
    padding: 0 1rem;
  }

  .table {
    font-size: 0.9rem !important;
  }

  .table th, .table td {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    vertical-align: middle;
  }

  .employeeRow {
    cursor: pointer;
  }

  .action-icons button {
    width: 100% !important;
    padding: 0.3rem 0.5rem !important;
    font-size: 0.875rem !important;
  }

  .action-icons button.bg-primary {
    white-space: nowrap;
  }

  /* Adjust margins to prevent content overflow */
  .container, .dash-info, .serach-box {
    max-width: 100% !important;
  }
}




</style>

<body>
  <div class="emp-container">
    <div class="empHeader d-flex justify-content-between align-items-center mb-4">
      <h4 class="fw-bold">Employee Management</h4>
      <a href="/admin/addNewEmployee" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Employee
      </a>
    </div>

    <!-- Only show on laptop and above -->
<div class="dash-info d-none d-lg-flex justify-content-between gap-4">

  <!-- Total Employees -->
  <div class="dash-card d-flex justify-content-between align-items-center rounded-3 bg-white shadow-sm p-4 w-100">
    <div>
      <p class="mb-1">Total Employees</p>
      <h3 class="fw-bold"><%= totalEmployees %></h3>
    </div>
    <div>
      <i class="bi bi-people text-primary bg-primary bg-opacity-25 p-4 rounded-circle fs-3"></i>
    </div>
  </div>

  <!-- Active Employees -->
  <div class="dash-card d-flex justify-content-between align-items-center rounded-3 bg-white shadow-sm p-4 w-100">
    <div>
      <p class="mb-1">Active</p>
      <h3 class="fw-bold text-success"><%= totalActiveEmployees %></h3>
    </div>
    <div>
      <i class="bi bi-people text-success bg-success bg-opacity-25 p-4 rounded-circle fs-3"></i>
    </div>
  </div>

  <!-- Inactive Employees -->
  <div class="dash-card d-flex justify-content-between align-items-center rounded-3 bg-white shadow-sm p-4 w-100">
    <div>
      <p class="mb-1">In-active</p>
      <h3 class="fw-bold text-danger"><%= totalEmployees - totalActiveEmployees %></h3>
    </div>
    <div>
      <i class="bi bi-people text-danger bg-danger bg-opacity-25 p-4 rounded-circle fs-3"></i>
    </div>
  </div>

  <!-- Monthly Payroll -->
  <div class="dash-card d-flex justify-content-between align-items-center rounded-3 bg-white shadow-sm p-4 w-100">
    <div>
      <p class="mb-1">Monthly Payroll</p>
      <h3 class="fw-bold">₹<%= totalSalaryAmount %></h3>
    </div>
    <div>
      <i class="bi bi-people text-primary bg-primary bg-opacity-25 p-4 rounded-circle fs-3"></i>
    </div>
  </div>

</div>


    <div class="serach-box mt-4 bg-white d-flex gap-2 rounded">
      <div class="input-group p-3">
        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
        <input type="text" id="searchInput" class="form-control border-start-0"
          placeholder="Search employees by name...">
      </div>
      <select id="roleFilter" class="select-status form-select">
        <option value="">All Roles</option>
        <option value="Security Guard">Security Guard</option>
        <option value="Housekeeper">Housekeeper</option>
        <option value="Gardener">Gardener</option>
      </select>
    </div>

    <div class="table-responsive bg-white rounded shadow-sm mt-4">
      <table class="table mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th>Employee</th>
            <th>Role & Shift</th>
            <th>Contact</th>
            <th>Salary</th>
            <th>Join Date</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% allEmployeeDetails.forEach(employee => { %>
            <tr class="employeeRow"
              data-name="<%= employee.name.toLowerCase() %>"
              data-role="<%= employee.role.toLowerCase() %>">
              <td>
                <strong><%= employee.name %></strong><br>
              </td>
              <td>
                <%= employee.role %><br>
                <small class="text-muted">Joined: <%= employee.join_date.toISOString().split('T')[0] %></small>
              </td>
              <td>
                <%= employee.contact %><br>
              </td>
              <td class="fw-semibold">
                ₹<%= employee.salary %><br>
              </td>
              <td>
                <%= employee.join_date.toISOString().split('T')[0] %><br>
              </td>
              <td>
                <% if (employee.status === "Active") { %>
                  <span class="status-badge text-success fw-bold"><%= employee.status %></span>
                <% } else { %>
                  <span class="status-badge text-danger fw-bold"><%= employee.status %></span>
                <% } %>
              </td>
              <td class="action-icons text-primary">
                <form action="/admin/employees/<%= employee._id %>/edit" method="get">
                  <button class="bg-primary text-white p-1 px-3 rounded fw-bold">Manage</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const searchInput = document.getElementById("searchInput");
    const roleFilter = document.getElementById("roleFilter");
    const employeeRows = document.querySelectorAll(".employeeRow");

    function filterEmployees() {
      const search = searchInput.value.toLowerCase();
      const role = roleFilter.value.toLowerCase();

      employeeRows.forEach(row => {
        const name = row.dataset.name;
        const empRole = row.dataset.role;

        const matchesSearch = name.includes(search);
        const matchesRole = role === "" || empRole === role;

        if (matchesSearch && matchesRole) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });
    }

    searchInput.addEventListener("keyup", filterEmployees);
    roleFilter.addEventListener("change", filterEmployees);
  </script>
</body>
