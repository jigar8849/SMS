<%- layout("layouts/boilerplate") %>

 <style>
    body {
      background-color: #f8f9fc;
      font-family: 'Segoe UI', sans-serif;
    }
    .form-container {
      max-width: 700px;
      margin: auto;
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      padding: 30px;
      margin-top: 50px;
    }
    .form-title {
      font-weight: 600;
      margin-bottom: 25px;
      color: #1d4ed8;
    }
    .btn-submit {
      background-color: #1d4ed8;
      color: white;
      font-weight: 500;
      border-radius: 8px;
    }
    .btn-submit:hover {
      background-color: #2563eb;
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h4 class="form-title text-center">Create New Bill</h4>

    <form action="/createBill" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Bill Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="E.g., Water Bill July" required />
      </div>

      <div class="mb-3">
        <label for="type" class="form-label">Bill Type</label>
        <select class="form-select" id="type" name="type" required>
          <option value="" disabled selected>Select Type</option>
          <option value="Water">Water</option>
          <option value="Gas">Gas</option>
          <option value="Maintenance">Maintenance</option>
          <option value="Other">Other</option>
        </select>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="amount" class="form-label">Amount (₹)</label>
          <input type="number" class="form-control" id="amount" name="amount" min="0" required />
        </div>

        <div class="col-md-6 mb-3">
          <label for="penaltyPerDay" class="form-label">Penalty (₹)</label>
          <input type="number" class="form-control" id="penaltyPerDay" name="penalty" min="0" value="0" />
        </div>
      </div>

      <div class="mb-3">
        <label for="dueDate" class="form-label">Due Date</label>
        <input type="date" class="form-control" id="dueDate" name="dueDate" required />
      </div>


      <div class="d-grid">
        <button type="submit" class="btn btn-submit">Create Bill</button>
      </div>
    </form>
  </div>

</body>