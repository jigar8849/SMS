<%- layout("layouts/boilerplate") %>


<body>
    <div class="container mt-5">
  <h2 class="mb-4">Add New Employee</h2>
  <form method="post" action="/addNewEmployee" id="addEmployeeForm">
    <div class="mb-3">
      <label for="name" class="form-label">Employee Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
    </div>

    <div class="mb-3">
      <label for="role" class="form-label">Role</label>
      <select class="form-select" id="role" name="role" required>
        <option value="" disabled selected>Select Role</option>
        <option value="Security Guard">Security Guard</option>
        <option value="Plumber">Plumber</option>
        <option value="Gardener">Gardener</option>
        <option value="Cleaner">Cleaner</option>
        <option value="Other">Other</option>
      </select>
    </div>

    <div class="mb-3">
      <label for="contact" class="form-label">Contact Number</label>
      <input type="tel" class="form-control" id="contact" name="contact" required>
    </div>

    <div class="mb-3">
      <label for="salary" class="form-label">Salary</label>
      <input type="number" class="form-control" id="salary" name="salary" required>
    </div>

    <div class="mb-3 row">
  <div class="col-md-6">
    <label for="joinDate" class="form-label">Join Date</label>
    <input type="date" class="form-control" id="joinDate" name="join_date" required>
  </div>

  <div class="col-md-6">
    <label for="location" class="form-label">Location in society</label>
    <input type="text" class="form-control" name="location" required>
  </div>
</div>


    <div class="mb-3">
      <label for="status" class="form-label">Status</label>
      <select class="form-select" id="status" name="status" required>
        <option value="" disabled selected>Select Status</option>
        <option value="Active">Active</option>
        <option value="Inactive">Inactive</option>
      </select>
    </div>

    <button type="submit" class="btn btn-success fw-bold fs-5">
       Add Employee
    </button>
  </form>
</div>
</body>