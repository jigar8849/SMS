<%- layout("layouts/boilerplate") %>

<body>
  <div class="container mt-5">
  <h2 class="mb-4">Add New Employee</h2>

  <form method="POST" action="/admin/addNewEmployee" id="addEmployeeForm" class="needs-validation" novalidate>
    <!-- Name -->
    <div class="mb-3">
      <label for="name" class="form-label">Employee Name</label>
      <input type="text" class="form-control" id="name" name="name" required>
      <div class="invalid-feedback">Please enter the employee name.</div>
    </div>

    <!-- Role -->
    <div class="mb-3">
      <label for="role" class="form-label">Role</label>
      <select class="form-select" id="role" name="role" required>
        <option value="" disabled selected>Select Role</option>
        <option value="Security Guard">Security Guard</option>
        <option value="Plumber">Plumber</option>
        <option value="Gardener">Gardener</option>
        <option value="Cleaner">Cleaner</option>
        <option value="Other">Other</option>
      </select>
      <div class="invalid-feedback">Please select a role.</div>
    </div>

    <!-- Contact -->
    <div class="mb-3">
      <label for="contact" class="form-label">Contact Number</label>
      <input type="tel" class="form-control" id="contact" name="contact" pattern="[0-9]{10}" required>
      <div class="invalid-feedback">Please enter a 10-digit contact number.</div>
    </div>

    <!-- Salary -->
    <div class="mb-3">
      <label for="salary" class="form-label">Salary</label>
      <input type="number" class="form-control" id="salary" name="salary" required min="0">
      <div class="invalid-feedback">Please enter the salary amount.</div>
    </div>

    <!-- Join Date & Location -->
    <div class="mb-3 row">
      <div class="col-md-6">
        <label for="joinDate" class="form-label">Join Date</label>
        <input type="date" class="form-control" id="joinDate" name="join_date" required>
        <div class="invalid-feedback">Please select the joining date.</div>
      </div>

      <div class="col-md-6">
        <label for="location" class="form-label">Location in Society</label>
        <input type="text" class="form-control" name="location" required>
        <div class="invalid-feedback">Please enter the location.</div>
      </div>
    </div>

    <!-- Status -->
    <div class="mb-3">
      <label for="status" class="form-label">Status</label>
      <select class="form-select" id="status" name="status" required>
        <option value="" disabled selected>Select Status</option>
        <option value="Active">Active</option>
        <option value="Inactive">Inactive</option>
      </select>
      <div class="invalid-feedback">Please select a status.</div>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-success fw-bold fs-5">Add Employee</button>
  </form>
</div>
</body>


