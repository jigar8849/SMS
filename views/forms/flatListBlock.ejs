<%- layout("layouts/boilerplate") %>

    <style>
        .flat-container {
            padding: 2rem;
        }

        .table thead th {
            background: linear-gradient(90deg, #4f46e5, #3b82f6);
            color: #fff;
            border: none;
        }

        .table tbody tr {
            transition: background 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: #f3f4f6;
        }

        .card {
            border: none;
        }

        .card-body {
            padding: 0;
            overflow: hidden;
            border-radius: 0 0 1rem 1rem;
        }

        .table td {
            vertical-align: middle;
        }

        .btn-primary {
            background: linear-gradient(90deg, #4f46e5, #3b82f6);
            border: none;
        }
    </style>

    <body>
        <div class="flat-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold">
                    <i class="bi bi-building-fill"></i> Block-<%= blockName %> Member Details
                </h4>
                <button class="btn btn-primary">
                    <i class="bi bi-download"></i> Download PDF
                </button>
            </div>

            <div class="container">
                <div class="card shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col"><i class="bi bi-house-fill"></i> House No.</th>
                                        <th scope="col"><i class="bi bi-person-fill"></i> Owner Name</th>
                                        <th scope="col"><i class="bi bi-telephone-fill"></i> Contact Number</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (members.length===0) { %>
                                        <tr>
                                            <td colspan="3" class="text-center">No members found for Block-<%= blockName
                                                    %>
                                            </td>
                                        </tr>
                                        <% }else{ %>
                                            <% members.forEach(member=> { %>
                                                <tr>
                                                    <td class="fw-semibold"><%= blockName %>-<%= member.flat_number %></td>
                                                    <td class="fw-semibold"><%= member.first_name %> <%= member.last_name %></td>
                                                    <td class="fw-semibold"><%= member.mobile_number %></td>
                                                </tr>

                                            <% }) %>
                                        <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>