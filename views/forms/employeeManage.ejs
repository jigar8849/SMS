<%- layout("layouts/boilerplate") %>


    <body class="bg-light">

        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-body p-5">
                           <div class="update-head d-flex justify-content-between mb-5">
                             <h2 class="mb-4 text-center">Update Employee Details</h2>
                            <form action="/admin/employees/<%= employee._id %>?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger fw-bold px-3 ">Delete
                                    Employee</button>
                            </form>
                           </div>

                            <form action="/admin/employees/<%= employee._id %>?_method=PUT" method="post">
                                <!-- Name -->
                                <div class="mb-3">
                                    <label for="name" class="form-label fw-semibold">Name</label>
                                    <input type="text" id="name" name="name" value="<%= employee.name %>"
                                        class="form-control form-control-lg" placeholder="Enter employee name" required>
                                </div>

                                <!-- Role -->
                                <div class="mb-3">
                                    <label for="role" class="form-label fw-semibold">Role</label>
                                    <select id="role" name="role" value="<%= employee.role %>"
                                        class="form-select form-select-lg" required>
                                        <option selected disabled>Select role</option>
                                        <option>Security Guard</option>
                                        <option>Plumber</option>
                                        <option>Gardener</option>
                                        <option>Cleaner</option>
                                        <option>Other</option>
                                    </select>
                                </div>

                                <!-- Contact -->
                                <div class="mb-3">
                                    <label for="contact" class="form-label fw-semibold">Contact Number</label>
                                    <input type="number" id="contact" name="contact" value="<%= employee.contact %>"
                                        class="form-control form-control-lg" placeholder="Enter contact number"
                                        required>
                                </div>

                                <!-- Salary -->
                                <div class="mb-3">
                                    <label for="salary" class="form-label fw-semibold">Salary</label>
                                    <input type="number" id="salary" name="salary" value="<%= employee.salary %>"
                                        class="form-control form-control-lg" placeholder="Enter salary" required>
                                </div>

                                <!-- Join Date -->
                                <div class="mb-3">
                                    <label for="join_date" class="form-label fw-semibold">Join Date</label>
                                    <input type="date" id="join_date" name="join_date"
                                        value="<%= employee.join_date.toISOString().split('T')[0] %>"
                                        class="form-control form-control-lg" required>
                                </div>

                                <!-- Status -->
                                <div class="mb-4">
                                    <label for="status" class="form-label fw-semibold">Status</label>
                                    <select id="status" name="status" class="form-select form-select-lg" required>
                                        <option selected disabled>
                                            <%= employee.status %>
                                        </option>
                                        <option>Active</option>
                                        <option>Inactive</option>
                                    </select>
                                </div>

                                <div class="d-grid d-flex justify-content-center gap-3">
                                    <button type="submit"
                                        class="btn btn-primary btn-lg rounded-pill fw-bold px-5">Update
                                        Employee</button>

                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>