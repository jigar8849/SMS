<%- layout("layouts/boilerplate") %>

<body>
    <div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg rounded-4">
        <div class="card-body p-5">
          <h2 class="mb-4 text-center">Update Employee Details</h2>

          <form action="/admin/employees/<%= employee._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
            
            <!-- Name -->
            <div class="mb-3">
              <label for="name" class="form-label fw-semibold">Name</label>
              <input type="text" id="name" name="name" value="<%= employee.name %>" class="form-control" required>
              <div class="invalid-feedback">Please enter the employee's name.</div>
            </div>

            <!-- Role -->
            <div class="mb-3">
              <label for="role" class="form-label fw-semibold">Role</label>
              <select id="role" name="role" class="form-select" required>
                <option disabled>Select role</option>
                <option value="Security Guard" <%= employee.role === "Security Guard" ? "selected" : "" %>>Security Guard</option>
                <option value="Plumber" <%= employee.role === "Plumber" ? "selected" : "" %>>Plumber</option>
                <option value="Gardener" <%= employee.role === "Gardener" ? "selected" : "" %>>Gardener</option>
                <option value="Cleaner" <%= employee.role === "Cleaner" ? "selected" : "" %>>Cleaner</option>
                <option value="Other" <%= employee.role === "Other" ? "selected" : "" %>>Other</option>
              </select>
              <div class="invalid-feedback">Please select a role.</div>
            </div>

            <!-- Contact -->
            <div class="mb-3">
              <label for="contact" class="form-label fw-semibold">Contact</label>
              <input type="tel" id="contact" name="contact" value="<%= employee.contact %>" pattern="[0-9]{10}" class="form-control" required>
              <div class="invalid-feedback">Enter a valid 10-digit contact number.</div>
            </div>

            <!-- Salary -->
            <div class="mb-3">
              <label for="salary" class="form-label fw-semibold">Salary</label>
              <input type="number" id="salary" name="salary" value="<%= employee.salary %>" class="form-control" required min="0">
              <div class="invalid-feedback">Please enter a valid salary.</div>
            </div>

            <!-- Join Date -->
            <div class="mb-3">
              <label for="join_date" class="form-label fw-semibold">Join Date</label>
              <input type="date" id="join_date" name="join_date" value="<%= employee.join_date.toISOString().split('T')[0] %>" class="form-control" required>
              <div class="invalid-feedback">Please enter the join date.</div>
            </div>

            <!-- Status -->
            <div class="mb-4">
              <label for="status" class="form-label fw-semibold">Status</label>
              <select id="status" name="status" class="form-select" required>
                <option disabled>Select status</option>
                <option value="Active" <%= employee.status === "Active" ? "selected" : "" %>>Active</option>
                <option value="Inactive" <%= employee.status === "Inactive" ? "selected" : "" %>>Inactive</option>
              </select>
              <div class="invalid-feedback">Please select the status.</div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
