<%- layout("layouts/boilerplate") %>

  <style>
    body {
      background: #eef2f7;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
    }

    .card {
      border: none;
      border-radius: 1rem;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.07);
      background: #ffffff;
    }

    .page-title {
      color: #0d6efd;
      font-weight: 700;
    }

    .table-responsive {
      border-radius: 0.75rem;
      overflow-x: auto;
    }

    .table {
      margin-bottom: 0;
    }

    .table thead {
      background: linear-gradient(90deg, #0d6efd, #0a58ca);
      color: #fff;
      border-top-left-radius: 0.75rem;
      border-top-right-radius: 0.75rem;
    }

    .table-hover tbody tr {
      transition: all 0.2s ease;
    }

    .table-hover tbody tr:hover {
      background-color: #f3f8ff;
    }

    .table th,
    .table td {
      vertical-align: middle;
      white-space: nowrap;
    }

    .btn {
      border-radius: 50px;
      padding: 0.4rem 0.9rem;
      font-size: 0.85rem;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      transition: all 0.2s ease;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
      background: linear-gradient(90deg, #00c292, #00a884);
      border: none;
      color: #fff;
    }

    .btn-danger {
      background: linear-gradient(90deg, #e74c3c, #c0392b);
      border: none;
      color: #fff;
    }

    .status-badge {
      font-size: 0.75rem;
      padding: 0.35rem 0.8rem;
      border-radius: 50px;
      background-color: #ffc107;
      color: #212529;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .card {
        padding: 1rem;
      }

      .page-title {
        font-size: 1.5rem;
      }

      .btn {
        font-size: 0.75rem;
        padding: 0.35rem 0.7rem;
      }
    }
  </style>

  <body>
    <div class="container my-5">
      <div class="card p-4">
        <h2 class="page-title mb-4">ðŸ“‹ Event Booking Requests</h2>

        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th>Send By</th>
                <th>Event Name</th>
                <th>Block/House</th>
                <th>Location</th>
                <th>Time</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>


              <% eventDetails.forEach(event=> { %>
                <tr>
                  <td>
                    <%= event.createdBy.first_name %>
                      <%= event.createdBy.last_name %>
                  </td>
                  <td>
                    <%= event.title %>
                  </td>
                  <td>
                    <%= event.createdBy.block %>-<%= event.createdBy.flat_number %>
                  </td>
                  <td>
                    <%= event.venue %>
                  </td>
                  <td>
                    <%= event.startTime %>-<%= event.endTime %>
                  </td>
                  <td>
                    <%= event.date.toISOString().split('T')[0] %>
                  </td>
                  <% if(event.status === "Pending"){ %>
                    <td><span class="status-badge"><%= event.status %></span></td>
                    <% }else if(event.status === "Approved"){ %>
                      <td><span class="status-badge bg-success fw-bold"><%= event.status %></span></td>
                      <% }else { %>
                        <td><span class="status-badge bg-danger fw-bold"><%= event.status %></span></td>
                      <% } %>
                      <td>
                        <form action="/approveEvent/<%= event._id %>/approve" method="POST" style="display:inline;">
                          <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-check-circle"></i> Approve
                          </button>
                        </form>
                        <form action="/approveEvent/<%= event._id %>/reject" method="post" style="display: inline;">
                          <button class="btn btn-danger btn-sm">
                          <i class="bi bi-x-circle"></i> Reject
                        </button>
                        </form>
                      </td>
                </tr>
                <% }); %>


            </tbody>
          </table>
        </div>
      </div>
    </div>

  </body>