<%- layout("layouts/boilerplate") %>

    <style>
        @media (max-width: 768px) {
            .card {
                padding: 1.5rem;
            }
        }
    </style>

    <body>

        <div class="container mt-5">
            <div class="card shadow-sm rounded p-4">
                <h3 class="mb-4 fw-bold text-primary">Edit Bill Template</h3>

                <form action="/bills/<%= bill._id %>?_method=PUT" method="POST">
                    <div class="row g-3">
                        <!-- Title -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Bill Title</label>
                            <input type="text" class="form-control" name="title" value="<%= bill.title %>" required>
                        </div>

                        <!-- Type -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Bill Type</label>
                            <select class="form-select" name="type" required>
                                <option value="">Select Type</option>
                                <option value="Water" <%=bill.type==='Water' ? 'selected' : '' %>>Water</option>
                                <option value="Gas" <%=bill.type==='Gas' ? 'selected' : '' %>>Gas</option>
                                <option value="Maintenance" <%=bill.type==='Maintenance' ? 'selected' : '' %>
                                    >Maintenance
                                </option>
                                <option value="Other" <%=bill.type==='Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>

                        <!-- Amount -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Amount (₹)</label>
                            <input type="number" class="form-control" name="amount" value="<%= bill.amount %>" required>
                        </div>

                        <!-- Due Date -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Due Date</label>
                            <input type="date" class="form-control" name="dueDate"
                                value="<%= bill.dueDate.toISOString().split('T')[0] %>" required>
                        </div>

                        <!-- Penalty -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Penalty Per Day (₹)</label>
                            <input type="number" class="form-control" name="penalty" value="<%= bill.penalty %>"
                                required>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-12 mt-4">
                            <button type="submit" class="btn btn-primary px-4 fw-semibold">Update Bill</button>
                            <a href="/admin-bill-list" class="btn btn-outline-secondary ms-2">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </body>